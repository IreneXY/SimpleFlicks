<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textH1</item>
        <item name="android:textColorSecondary">@color/textH2</item>
    </style>

    <style name="AppTheme.splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppTheme.toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="div">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="div.hlist" parent="div">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="div.vlist" parent="div">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="div.text" parent="div">
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="div.h1" parent="div.text">
        <item name="android:textColor">@color/textH1</item>
        <item name="android:textSize">@dimen/text_h1</item>
    </style>

    <style name="div.h2" parent="div.text">
        <item name="android:textColor">@color/textH2</item>
        <item name="android:textSize">@dimen/text_h2</item>
    </style>

    <style name="div.p" parent="div.text">
        <item name="android:textColor">@color/textP</item>
        <item name="android:textSize">@dimen/text_p</item>
    </style>

    <style name="div.p.sub" parent="div.text">
        <item name="android:textColor">@color/textSub</item>
        <item name="android:textSize">@dimen/text_sub</item>
    </style>

    <style name="moviebrief" parent="div.hlist">
        <item name="android:layout_marginLeft">@dimen/margin_normal</item>
        <item name="android:layout_marginRight">@dimen/margin_normal</item>
        <item name="android:layout_marginTop">@dimen/margin_mid</item>
        <item name="android:layout_marginBottom">@dimen/margin_mid</item>
        <item name="android:padding">@dimen/margin_normal</item>
        <item name="android:background">@color/black</item>
    </style>

</resources>
